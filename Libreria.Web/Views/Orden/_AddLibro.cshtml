@model Libreria.Web.ViewModels.ViewModelInput
<div class="row" id="MyAddLibro">
    <div class="col-md-4">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">

            <label asp-for="IdLibro" name="IdLibro" class="control-label"></label>
            <input asp-for="IdLibro" id="IdLibroModal" type="text" autocomplete="off" class="form-control  form-control-sm" />
            
            <span asp-validation-for="IdLibro" class="text-danger"></span>
            <!--Hidden field with stock-->
            <input type="hidden" id="CantidadEnInventarioModal" />
        </div>
        <div class="form-group">
            <label asp-for="Cantidad" class="control-label"></label>
            <input asp-for="Cantidad" id="CantidadModal" type="number" class="form-control form-control-sm" />
            <span asp-validation-for="Cantidad" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Precio" class="control-label"></label>
            <input asp-for="Precio" id="Precio" readonly type="number" class="form-control  form-control-sm" />
            <span asp-validation-for="Precio" class="text-danger"></span>
        </div>
        <br />
        <!--Call JavaScript addLibro -->
        <button type="button" class="btn btn-success" onclick="addLibro()">Comprar Libro</button>
    </div>
    <div class="col-md-4 text-center">
        <img src="/Images/nophoto.jpg" class="img-responsive" style="height:80%;width:80%" id="ImgLibro">
    </div>
    <div class="col-md-4 text-left">
       <p id="LibroSelect" name="LibroSelect" class="form-label fw-bold">Libro: -</p>
        <p id="PrecioSelect" name="PrecioSelect" class="form-label fw-bold">Precio: -</p>
        <p id="CantidadSelect" name="CantidadSelect" class="form-label fw-bold">Cantidad Stodk: -</p>
    </div>
</div>




<div>
    <a asp-action="Create">Regresar a la Orden</a>
</div>



@section Scripts {

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

