@{
    ViewData["Title"] = "Inicio";
}

<div id="exampleCarrusel" class="carousel slide" style="padding-top:1em">
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#exampleCarrusel" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#exampleCarrusel" data-bs-slide-to="1" aria-label="Slide 2"></button>
        <button type="button" data-bs-target="#exampleCarrusel" data-bs-slide-to="2" aria-label="Slide 3"></button>
    </div>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="./images/slide-1.jpg" class="d-block w-100" alt="Cátalogo" height="500">
            <div class="carousel-caption d-none d-md-block">
                <h5>Cátalogo</h5>
                <p>Amplio Cátalogo de Libros</p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="./images/slide-2.jpg" class="d-block w-100" alt="Eventos" height="500">
            <div class="carousel-caption d-none d-md-block">
                <h5>Eventos</h5>
                <p>Acceso a suscripción de eventos y novedades</p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="./images/slide-3.png" class="d-block w-100" alt="Comprar" height="500">
            <div class="carousel-caption d-none d-md-block">
                <h5>Comprar</h5>
                <p>Comprar de forma segura y rápida</p>
            </div>
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#exampleCarrusel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#exampleCarrusel" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>
@section Scripts{
    <script type="text/javascript">
        const myCarouselElement = document.getElementById('exampleCarrusel')

        const carousel = new bootstrap.Carousel(myCarouselElement, {
          interval: 3000,
        })
    </script>
}



