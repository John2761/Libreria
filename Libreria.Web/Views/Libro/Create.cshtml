@model Libreria.Application.DTOs.LibroDTO

@{
    ViewData["Title"] = "Crear";
}

<h1>Crear</h1>

<h4>Libro</h4>
<hr />
<div>

    <form asp-action="Create" asp-antiforgery="true" class="row" enctype="multipart/form-data">
        <div class="col-md-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Isbn" class="control-label"></label>
                <input asp-for="Isbn" class="form-control" />
                <span asp-validation-for="Isbn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdAutor" class="control-label"></label>
                @* <input asp-for="IdAutor" class="form-control" /> *@
                @Html.DropDownListFor(m => m.IdAutor,
                         new SelectList(ViewBag.ListAutor, "IdAutor", "Nombre"),
                         new { @class = "form-select" })
                <span asp-validation-for="IdAutor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Precio" class="control-label"></label>
                <input asp-for="Precio" class="form-control" />
                <span asp-validation-for="Precio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cantidad" class="control-label"></label>
                <input asp-for="Cantidad" class="form-control" />
                <span asp-validation-for="Cantidad" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group row g-3">
                <div class="col">
                    <label asp-for="IdCategoria" class="form-label mt-4"></label>
                </div>
                <div class="col">
                    @*  @Html.DropDownList("selectedCategorias",
                    (MultiSelectList)ViewBag.ListCategorias,
                    new { htmlAttributes = new { @class = "form-control" }, multiple = "multiple" }) *@
                    <select id="selectedCategorias" name="selectedCategorias"
                            class="form-control" asp-items="ViewBag.ListCategorias"
                            multiple="multiple"></select>
                </div>

            </div>
            <div class="form-group">
                <label asp-for="Imagen" class="control-label"></label>
                <input type="file" class="form-control" id="ImageFile" name="ImageFile" required />
                <span asp-validation-for="Imagen" class="text-danger"></span>
            </div>
            <div class="form-group row mt-3">
                <div class="btn-group" role="group" aria-label="Basic example">
                    <a asp-action="Index" class="btn btn-dark">Regresar al listado</a>
                    <input type="submit" value="Crear" class="btn btn-primary" />
                   
                </div>
            </div>
        </div>
    </form>
</div>




@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function () {
            $('#selectedCategorias').multiselect({
                buttonClass: 'form-select',
                templates: {
                    button: '<button type="button" class="multiselect dropdown-toggle" data-bs-toggle="dropdown"><span class="multiselect-selected-text"></span></button>',
                },
                includeSelectAllOption: true,
                selectAllText: 'Seleccionar todas',
                allSelectedText: 'Todas las opciones',
                nonSelectedText: 'Seleccione una opción',
                nSelectedText: ' - seleccionadas',
            });
        });
    </script>
}
